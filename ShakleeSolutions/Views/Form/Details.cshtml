@model ShakleeSolutions.Models.Form

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Form</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ClientId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ClientId)
        </dd>

        <dt>
            @Html.Label("Ailments Selected", new { })
        </dt>
        <dd>
            @foreach (var item in Model.Ailments)
            {
                @Html.Label(item.Desc, new { style = "font-weight:normal" })
                <br />
            }
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new {id = Model.Id}) | 
    @Html.ActionLink("Back to List", "ViewForms", new { clientId = Model.ClientId })
</p>
